	<!-- Tray -->
	<div id="tray" class="box">
		<p class="f-left box">
			<!-- Switcher -->
			<span class="f-left" id="switcher">
				<%= link_to image_tag('adminiziolite_img/switcher-1col.gif', :alt => '1 Column'), '#', :class => 'styleswitch ico-col1', :title => 'Display one column', :rel => '1col' %>
				<%= link_to image_tag('adminiziolite_img/switcher-2col.gif', :alt => '2 Column'), '#', :class => 'styleswitch ico-col2', :title => 'Display two column', :rel => '2col' %>
			</span>
			Project: <strong>サイト監視</strong>
		</p>
		<p class="f-right">ユーザ名: <strong><%= h current_user.name %></strong> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <strong><%= link_to 'ログアウト', logout_path, :id => 'logout' %></strong></p>
	</div> <!--  /tray -->
	<hr class="noscreen" />

	<!-- Menu -->
	<div id="menu" class="box">
		<ul class="box">
			<li <% if params[:controller] == "top" %> id="menu-active" <% end %>><%= link_to '<span>ダッシュボード</span>', :root %></li>
			<li <% if params[:controller] == "sites" %> id="menu-active" <% end %>><%= link_to '<span>監視サイト</span>', :sites %></li>
			<li <% if params[:controller] == "users" %> id="menu-active" <% end %>><%= link_to '<span>ユーザ</span>', :users %></li>
			<li <% if params[:controller] == "logs" %> id="menu-active" <% end %>><%= link_to '<span>ログ</span>', :logs %></li>
			<% if current_user.usertype == 'admin' %>
				<li <% if params[:controller] == "configs" %> id="menu-active" <% end %>><%= link_to '<span>設定</span>', :configs %></li>
			<% end %>
		</ul>
	</div> <!-- /menu -->
